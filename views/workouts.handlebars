<div class="container is-fullhd pt-4 ">
    <div>
        <h1 class="has-text-centered is-size-2">Workouts</h1>
    </div>
</div>
<section class="container is-fluid pt-4">
    <div class="notification is-info">
        <h2 class="has-text-centered is-size-3">My Workouts</h2>
        <p class="has-text-centered is-size-5 pt-5" >Your workouts will show up here</p>
        <button class="button is-fullwidth button is-success is-light button is-rounded is-size-5" id="create-button">Create New Workout</button>
    </div>
</section>
<div class="modal" id="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Create New Workout</p>
        </header>
        <section class="modal-card-body">
            <div class="field">
                <label class="label">Title:</label>
                <div class="control">
                    <input id="title-id" class="input" type="text" placeholder="Type here">
                </div>
            </div>
            <div class="field">
                <label class="label">Category:</label>
                <div class="control">
                    <div class="select">
                        <select id="category">
                            <option>Please select</option>
                            <option>Cardio</option>
                            <option>Stamina</option>
                            <option>Strength</option>
                            <option>Flexibility</option>
                            <option>Coordination</option>
                            <option>Agility</option>
                            <option>Balance</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field">
                <label class="label">Description:</label>
                <div class="control">
                    <input id="description-id" class="input" type="Type here" placeholder="">
                </div>
            </div>
        </section>
        <footer class="modal-card-foot">
            <button class="button is-success" id="save-button">Save Workout</button>
            <button class="button is-danger" id="cancel-button">Cancel</button>
        </footer>
    </div>
</div>
<section>
    {{#each user.workout as |workout|}}
    {{> workout-card}}
    {{/each}}
</section>

<script src="js/newWorkout.js"></script>